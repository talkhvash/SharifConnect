<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<HBox fx:id="box" nodeOrientation="RIGHT_TO_LEFT" prefHeight="34.0" prefWidth="564.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.main.java.view.FXML.messenger.message.MessageViewFXML">
   <children>
      <VBox prefWidth="300.0">
         <children>
            <TextFlow lineSpacing="10.0" nodeOrientation="RIGHT_TO_LEFT" prefWidth="300.0">
               <children>
                  <Text fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" text="متن پیام" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextFlow>
            <Text fx:id="dateText" strokeType="OUTSIDE" strokeWidth="0.0" text="تاریخ" />
         </children>
      </VBox>
      <Button fx:id="downloadButton" mnemonicParsing="false" onAction="#download" text="دانلود فایل">
         <HBox.margin>
            <Insets top="8.0" />
         </HBox.margin>
      </Button>
   </children>
</HBox>
